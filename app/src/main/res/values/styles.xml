<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/darkcolor</item>
        <item name="colorAccent">@color/darkcolor</item>
        <item name="windowActionBar">false</item>
        <item name="android:itemBackground">@color/darkcolor</item>
        <item name="android:iconTint" tools:targetApi="o">@color/white</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MediaButton">
        <item name="background">@null</item>
        <item name="android:layout_width">88dip</item>
        <item name="android:layout_height">65dip</item>
    </style>

    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="iconTint">@color/white</item>
        <item name="android:buttonTint">@color/white</item>
        <item name="itemBackground">@color/darkcolor</item>
        <item name="android:itemBackground">@color/darkcolor</item>
    </style>
    <style name="AppTheme.AdAttribution">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">12sp</item>
        <item name="android:text">@string/ad_attribution</item>
        <item name="android:background">#FFCC66</item>
        <item name="android:width">15dp</item>
        <item name="android:height">15dp</item>
    </style>
    <style name="CustomDialog" parent="android:Theme.Material.Dialog" >
        <item name="android:textColor">@android:color/white</item>
        <item name="iconTint">@android:color/white</item>
        <item name="color">@android:color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorAccent">@android:color/white</item>
    </style>
</resources>
